{
    "name": "matlab-in-vscode",
    "displayName": "Matlab in VSCode",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.76.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:matlab"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "Matlab in VSCode",
            "properties": {
                "matlab-in-vscode.matlabPath": {
                    "type": "string",
                    "default": "matlab",
                    "description": "Path to matlab executable"
                },
                "matlab-in-vscode.matlabArgs": {
                    "type": "array",
                    "default": [
                        "addpath(genpath('./'));",
                        "set(groot, 'defaultLineLineWidth', 2);",
                        "set(groot, 'DefaultLineMarkerSize', 8);",
                        "set(groot, 'defaultAxesFontSize', 18);",
                        "set(groot, 'defaultAxesXGrid', 'on');",
                        "set(groot, 'defaultAxesYGrid', 'on');",
                        "set(groot, 'defaultAxesBox', 'on');",
                        "set(groot, 'defaultLegendBox', 'off');",
                        "format compact;"
                    ],
                    "description": "Arguments to pass to matlab"
                }
            }
        },
        "commands": [
            {
                "command": "matlab-in-vscode.runMatlabFile",
                "title": "Run Current Matlab File",
                "when": "editorTextFocus",
                "icon": "$(notebook-execute-all)"
            },
            {
                "command": "matlab-in-vscode.runMatlabCell",
                "title": "Run Current Matlab Cell",
                "key": "ctrl+enter",
                "mac": "cmd+enter",
                "when": "editorTextFocus",
                "icon": "$(notebook-execute)"
            },
            {
                "command": "matlab-in-vscode.interupt",
                "title": "Interupt Matlab",
                "icon": "$(notebook-stop)"
            },
            {
                "command": "matlab-in-vscode.cd",
                "title": "Change Matlab Working Directory",
                "icon": "$(file-symlink-directory)"
            },
            {
                "command": "matlab-in-vscode.stop",
                "title": "Stop Matlab",
                "icon": "$(panel-close)"
            },
            {
                "command": "matlab-in-vscode.variable",
                "title": "Show Variable",
                "icon": "$(eye)"
            },
            {
                "command": "matlab-in-vscode.edit",
                "title": "Edit in Matlab",
                "icon": "$(book)"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == matlab",
                    "command": "matlab-in-vscode.runMatlabFile",
                    "group": "navigation@1"
                },
                {
                    "when": "resourceLangId == matlab",
                    "command": "matlab-in-vscode.runMatlabCell",
                    "group": "navigation@2"
                },
                {
                    "when": "resourceLangId == matlab",
                    "command": "matlab-in-vscode.interupt",
                    "group": "navigation@3"
                },
                {
                    "when": "resourceLangId == matlab",
                    "command": "matlab-in-vscode.cd",
                    "group": "navigation@4"
                },
                {
                    "when": "resourceLangId == matlab",
                    "command": "matlab-in-vscode.variable",
                    "group": "navigation@5"
                },
                {
                    "when": "resourceLangId == matlab",
                    "command": "matlab-in-vscode.edit",
                    "group": "navigation@6"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.76.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "eslint": "^8.34.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^4.9.5",
        "ts-loader": "^9.4.2",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "@vscode/test-electron": "^2.2.3"
    }
}